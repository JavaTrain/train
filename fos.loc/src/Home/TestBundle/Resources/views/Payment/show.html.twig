{% extends 'HomeTestBundle::layout.html.twig' %}

{% block title %}Users payments{% endblock %}


{% block body %}
    {{ parent() }}

    <h1>Payment</h1>

    <table class="table my-style records_list">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ entity.amount }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('pay') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('pay_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>

<a class="btn btn-primary" href="{{ path('cluster') }}">
    Back to the groups list
</a>
{% endblock %}
